{
    "name": "Amexio Text Input",
    "description": "Text input component has been created with different configurable attributes for validation (min/max length, allow blank, custom regex), custom error message, help, custom styles.",
    "selector": "<amexio-text-input>",
    "properties": [
      {
        "name": "field-label",
        "description": "The label of this field",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      },
      {
        "name": "min-length",
        "description": "Minimum length required for textfield",
        "version": "4.0 onwards",
        "type": "number",
        "default": ""
      },
      {
        "name": "mac-length",
        "description": "Maximum length required for textfield",
        "version": "4.0 onwards",
        "type": "number",
        "default": ""
      },
      {
        "name": "allow-blank",
        "description": "Sets if field is required",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      },
      {
        "name": "error-msg",
        "description": "Sets the error message",
        "version": "4.0 onwards",
        "type": "none",
        "default": "none"
      },
      {
        "name": "min-error-msg",
        "description": "Sets the error message for min validation",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      },
      {
        "name": "max-error-msg",
        "description": "Sets the error message for max validation",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      },
      {
        "name": "place-holder",
        "description": "Show place-holder inside dropdown component",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      },
      {
        "name": "disabled",
        "description": "True to disable the field.",
        "version": "4.0 onwards",
        "type": "boolean",
        "default": "false"
      },
      {
        "name": "icon-feedback",
        "description": "description",
        "version": "4.0 onwards",
        "type": "boolean",
        "default": "false"
      },
      {
        "name": "font-style",
        "description": "Set font-style to field",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      },
      {
        "name": "font-family",
        "description": "Set font-family to field",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      },
      {
        "name": "font-size",
        "description": "Set font-size to field",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      },
      {
        "name": "has-label",
        "description": "Flag to set label",
        "version": "4.0 onwards",
        "type": "boolean",
        "default": "false"
      },
      {
        "name": "pattern",
        "description": "Apply Reg-ex to the field",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      },
      {
        "name": "enable-popover",
        "description": "Set enable / disable popover.",
        "version": "4.0 onwards",
        "type": "string",
        "default": ""
      }
    ],
    "events": [
      {
        "name": "onBlur",
        "description": "On blur event"
      },
      {
        "name": "input",
        "description": "On input event field."
      },
      {
        "name": "focus",
        "description": "On focus event field."
      },
      {
        "name": "change",
        "description": "On field value change event"
      }
    ]
  }